<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center"
    android:background="@drawable/icmauback"
    >
    <TextView
        android:text="Thêm mặt hàng mới "
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textAllCaps="true"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/edt_nameMatHang"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:drawablePadding="15dp"
        android:background="@drawable/vienlogin"
        android:drawableLeft="@drawable/name_hang"
        android:fontFamily="serif"
        android:hint="Tên mặt hàng"
        android:paddingLeft="10dp"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black"
        android:textSize="20sp"/>
    <EditText
        android:id="@+id/edt_GiaTienMH"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:drawableLeft="@drawable/gia_tien_mh"
        android:drawablePadding="15dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/vienlogin"
        android:fontFamily="serif"
        android:hint="Giá tiền mặt hàng"
        android:paddingLeft="10dp"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black"
        android:textSize="20sp"  />
    <EditText
        android:id="@+id/edt_SoLuongmh"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/soluong_mh"
        android:background="@drawable/vienlogin"
        android:drawablePadding="15dp"
        android:fontFamily="serif"
        android:hint="Số lượng mặt hàng hiện tại"
        android:paddingLeft="10dp"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/bt_themMathang"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:background="@drawable/maubtnmh"
        android:textSize="16sp"
        android:text="Thêm mặt hàng mới"
        android:textColor="@color/black"/>

</LinearLayout>