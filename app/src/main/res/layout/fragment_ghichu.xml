<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/maubtngc"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textAllCaps="true"
        android:layout_gravity="center"
        android:text="Sổ ghi chú"/>
    <EditText
        android:id="@+id/edt_nameNo"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/vienlogin"
        android:drawablePadding="15dp"
        android:fontFamily="serif"
        android:hint="Tên khách hàng"
        android:drawableLeft="@drawable/name_no"
        android:paddingLeft="10dp"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black"
        android:textSize="20sp"/>
    <EditText
        android:id="@+id/edt_SoTienNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/vienlogin"
        android:drawableLeft="@drawable/ghichu_no"
        android:drawablePadding="15dp"
        android:fontFamily="serif"
        android:hint="Nội dung ghi chú"
        android:paddingLeft="10dp"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/bt_themNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:background="@drawable/backgroud_bt"
        android:layout_marginTop="20dp"
        android:text="THÊM mới"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="14dp"
        android:textSize="20sp"
        android:textColor="#3F51B5"
        android:id="@+id/tv_deleteAll"
        android:text="Xóa tất cả" />
    <EditText
        android:layout_width="match_parent"
        android:drawableLeft="@drawable/search"
        android:background="@drawable/vienlogin"
        android:drawablePadding="15dp"
        android:padding="10dp"
        android:id="@+id/edt_search"
        android:inputType="text"
        android:imeOptions="actionSearch"
        android:layout_height="wrap_content"
        android:hint="Nhập tên cần tìm" />
    <TextView
        android:text="so luong ghi chu"
        android:id="@+id/tv_Ghichucout"
        android:layout_width="wrap_content"
        android:layout_gravity="end"
        android:layout_height="wrap_content"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_No"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>