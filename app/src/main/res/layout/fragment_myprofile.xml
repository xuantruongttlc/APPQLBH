<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center"
    android:background="@drawable/icmauback"
    android:id="@+id/fragmentHome_drawerble_layout">

   <de.hdodenhof.circleimageview.CircleImageView
      android:id="@+id/img_avatar"
       android:layout_width="120dp"
       android:layout_height="120dp"
      android:src="@drawable/avatar"/>

   <EditText
       android:id="@+id/edt_full_name"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="30dp"
       android:background="@drawable/vienlogin"
       android:drawableLeft="@drawable/name_no"
       android:drawablePadding="15dp"
      android:padding="10dp"
      android:hint="Họ và Tên" />

   <EditText
       android:id="@+id/edt_Email"
       android:layout_marginTop="10dp"
       android:background="@drawable/vienlogin"
       android:drawableLeft="@drawable/ic_mail"
       android:drawablePadding="15dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:padding="10dp"
       android:hint="Email" />

   <Button
       android:id="@+id/btn_UpdateProfile"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="20dp"
       android:background="@drawable/maubtnmh"
       android:text="Cập nhật thông tin" />

   <Button
       android:id="@+id/btn_UpdateEmail"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="10dp"
       android:text="Cập nhật Email"
       android:background="@drawable/maubtnmh"/>





</LinearLayout>