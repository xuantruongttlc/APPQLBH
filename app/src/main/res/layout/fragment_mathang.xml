<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/icmauback"
    >
    <Button
        android:id="@+id/bt_themMathang"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:background="@drawable/maubtnmh"
        android:textSize="16sp"
        android:text="Thêm mặt hàng mới"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="14dp"
        android:textSize="20sp"
        android:textColor="#3F51B5"
        android:id="@+id/tv_deleteAllMH"
        android:text="Xóa tất cả" />
    <EditText
        android:layout_width="match_parent"
        android:drawableLeft="@drawable/search"
        android:background="@drawable/vienlogin"
        android:drawablePadding="15dp"
        android:padding="10dp"
        android:id="@+id/edt_searchMH"
        android:inputType="text"
        android:imeOptions="actionSearch"
        android:layout_height="wrap_content"
        android:hint="Nhập tên mặt hàng cần tìm" />
    <TextView
        android:id="@+id/tv_TongSLMH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="@string/app_name"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_MH"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>